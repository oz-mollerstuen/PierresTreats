@{
  Layout = "_Layout";
}

@model PierresSweets.Models.Treat

<h1>Add Flavor to: @Html.DisplayFor(model => model.TreatName)</h1>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  <h3>@Html.Label("Select Flavor") @Html.DropDownList("FlavorId")</h3>
  <br>

  <input type="submit" value="Add" class="btn btn-lg btn-info" style="margin-bottom: 4%;"/>
}

<p class="enlarge">@Html.ActionLink("Back to Treats", "Index")</p>